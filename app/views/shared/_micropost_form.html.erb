<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: t(".placeholder") %>
    </div>
  <%= f.submit t(".btn_submit_post"), class: "btn btn-primary" %>
  <span class="image">
    <%= f.file_field :image, accept:  Settings.shared.micropost_form.image_path %>
  </span>
<% end %>
