<% provide :title, t(".title_page") %>
<% provide :button_text, t(".btn_changes") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to Settings.user.edit.link_href, target: "_blank" do %>
        <%= t ".txt_change" %>
      <% end %>
    </div>
  </div>
</div>
