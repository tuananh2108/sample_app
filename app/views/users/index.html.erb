<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<table class="table users">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :id) do %>Id<% end %></th>
      <th scope="col">Avatar</th>
      <th scope="col"><%= sort_link(@q, :name) do %>Full Name<% end %></th>
      <th scope="col"><%= sort_link(@q, :email) do %>Email<% end %></th>
      <th scope="col">Admin</th>
      <th scope="col"><%= sort_link(@q, :created_at) do %>Created date<% end %></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>
