<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size_gravatar), micropost.user %>
  <span class="user"><%= link_to micropost.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= "#{t(".txt_posted")} time_ago_in_words micropost.created_at #{t(".txt_ago")}" %>.
    <% if current_user? micropost.user %>
      <%= button_to t(".delete"), micropost, method: :delete, data: {confirm: t(".you_sure")} %>
    <% end %>
  </span>
</li>
