<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size_gravatar), micropost %>
  <span class="user"><%= link_to micropost.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <!-- <%= image_tag micropost.display_image if micropost.image.attached? %> -->
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= "#{t(".txt_posted")} #{time_ago_in_words micropost.created_at} #{t(".txt_ago")}" %>.
    <% if current_user? micropost.user %>
      <%= button_to t(".title_link_delete"), micropost, method: :delete, data: {confirm: t(".confirm")} %>
    <% end %>
  </span>
</li>
